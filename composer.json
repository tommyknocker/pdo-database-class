  "support": {
    "issues": "https://github.com/tommyknocker/pdo-database-class/issues"
  },
  "authors": [
    {
      "name": "Vasiliy Krivoplyas",
      "email": "vasiliy@krivoplyas.com"
    }
  ],
  "require": {
    "php": "^8.4",
    "ext-pdo": "*",
    "psr/log": "^3.0",
    "psr/simple-cache": "^3.0",
    "psr/event-dispatcher": "^1.0"
  },
  "suggest": {
    "monolog/monolog": "If you need robust logging capabilities.",
    "symfony/cache": "For query result caching (PSR-16 implementation). Provides Filesystem, Redis, APCu, Memcached and other adapters.",
    "ext-apcu": "For APCu-based query caching (requires symfony/cache)",
    "ext-redis": "For Redis-based query caching (requires symfony/cache)",
    "ext-memcached": "For Memcached-based query caching (requires symfony/cache)",
    "ext-simplexml": "For bulk XML insert support",
    "ext-xmlreader": "For bulk XML insert support",
    "ext-xmlwriter": "For XML export support",
    "ext-pdo_mysql": "Required for MySQL and MariaDB database support",
    "ext-pdo_pgsql": "Required for PostgreSQL database support",
    "ext-pdo_sqlite": "Required for SQLite database support",
    "ext-pdo_sqlsrv": "Required for Microsoft SQL Server (MSSQL) database support",
    "ext-pdo_oci": "Required for Oracle database support"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.0",
    "monolog/monolog": "^3.9",
    "symfony/cache": "^7.3",
    "phpstan/phpstan": "^2.0",
    "phpstan/phpstan-phpunit": "^2.0",
    "friendsofphp/php-cs-fixer": "^3.89",
    "infection/infection": "^0.31"
  },
  "autoload": {
    "psr-4": {
      "tommyknocker\\pdodb\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "tommyknocker\\pdodb\\tests\\": "tests/"
    }
  },
  "bin": [
    "bin/pdodb",
    "bin/pdodb-mcp"
  ],
  "scripts": {
    "pdodb:test": "phpunit",
    "pdodb:test:mysql": "phpunit tests/mysql/*Tests.php",
    "pdodb:test:postgresql": "phpunit tests/postgresql/*Tests.php",
    "pdodb:test:sqlite": "phpunit tests/sqlite/*Tests.php",
    "pdodb:test:shared": "phpunit tests/shared/*Tests.php",
    "pdodb:phpstan": "phpstan analyse",
    "pdodb:cs-fix": "php-cs-fixer fix",
    "pdodb:cs-check": "php-cs-fixer fix --dry-run --diff",
    "pdodb:test-examples": "bash scripts/test-examples.sh",
    "pdodb:quality-check": "bash scripts/quality-check.sh",
    "pdodb:infection": "infection",
    "pdodb:infection:quick": "infection --min-msi=50 --min-covered-msi=60 --threads=4",
    "pdodb:infection:ci": "infection --min-msi=70 --min-covered-msi=75 --logger-github",
    "pdodb:check": [
      "@pdodb:phpstan",
      "@pdodb:test",
      "@pdodb:test-examples"
    ],
    "pdodb:check-all": [
      "@pdodb:phpstan",
      "@pdodb:cs-check",
      "@pdodb:test",
      "@pdodb:test-examples"
    ],
    "pdodb:migrate": "php scripts/migrate.php",
    "pdodb:migrate:create": "php scripts/migrate.php create",
    "pdodb:migrate:up": "php scripts/migrate.php migrate",
    "pdodb:migrate:down": "php scripts/migrate.php rollback",
    "pdodb:migrate:history": "php scripts/migrate.php history",
    "pdodb:migrate:new": "php scripts/migrate.php new",
    "pdodb:make:migration": "php scripts/make-migration.php",
    "pdodb:make:model": "php scripts/make-model.php",
    "pdodb:schema:inspect": "php scripts/schema-inspect.php",
    "pdodb:query:test": "php scripts/query-test.php",
    "pdodb:check-all-with-infection": [
      "@pdodb:phpstan",
      "@pdodb:cs-check",
      "@pdodb:test",
      "@pdodb:test-examples",
      "@pdodb:infection:ci"
    ],
    "pdodb:fix-all": [
      "@pdodb:cs-fix",
      "@pdodb:test"
    ]
  },
  "config": {
    "allow-plugins": {
      "infection/extension-installer": true
    }
  }
}
