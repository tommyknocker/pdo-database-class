{
  "name": "tommyknocker/pdo-database-class",
  "description": "A lightweight, portable PHP database library built on PDO that provides a unified API for common database operations \nacross MySQL, PostgreSQL and SQLite. It includes a QueryBuilder with a fluent, chainable API, safe parameter binding,\nmulti-row inserts, UPSERT support, CSV/XML loaders, and helpers for dialect differences.",
  "type": "library",
  "keywords": [
    "pdo",
    "database",
    "query builder",
    "mysql",
    "postgresql",
    "sqlite",
    "sqlite3",
    "prepared statements",
    "database abstraction",
    "php database",
    "upsert",
    "bulk insert",
    "csv import",
    "xml import",
    "transactional",
    "connection pool",
    "foreign keys",
    "psr-3"
  ],
  "homepage": "https://github.com/tommyknocker/pdo-database-class",
  "license": "MIT",
  "support": {
    "issues": "https://github.com/tommyknocker/pdo-database-class/issues"
  },
  "authors": [
    {
      "name": "Vasiliy Krivoplyas",
      "email": "vasiliy@krivoplyas.com"
    }
  ],
  "require": {
    "php": "^8.4",
    "ext-pdo": "*",
    "psr/log": "^3.0"
  },
  "suggest": {
    "monolog/monolog": "If you need robust logging capabilities.",
    "ext-simplexml": "For bulk XML insert support",
    "ext-xmlreader": "For bulk XML insert support"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "monolog/monolog": "^3.9"
  },
  "autoload": {
    "psr-4": {
      "tommyknocker\\pdodb\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "tommyknocker\\pdodb\\tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit"
  }
}
